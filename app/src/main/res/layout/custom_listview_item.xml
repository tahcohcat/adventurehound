<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:label="Test List"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="#c7c7c7">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_row="2"
        android:layout_column="15">

        <ImageView
            android:id="@+id/activityIcon"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentStart="false"
            android:cropToPadding="false"
            android:adjustViewBounds="false"
            android:background="@drawable/rounded_square_shape"
            android:padding="1dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/activitySubtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:layout_below="@+id/activityText"
            android:layout_toEndOf="@+id/activityIcon"
            android:paddingLeft="2dp" />

        <TextView
            android:id="@+id/activityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/activityName"
            android:autoText="false"
            android:maxLines="1"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/activityIcon"
            android:paddingLeft="2dp" />

        <GridLayout
            android:id="@+id/ratingsGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:columnCount="5"
            android:rowCount="2"
            android:paddingLeft="5dp"
            android:layout_alignTop="@+id/activityText"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/attribute_image04"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_mustache_rating" />

            <ImageView
                android:id="@+id/attribute_image03"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_mustache_rating" />

            <ImageView
                android:id="@+id/attribute_image02"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_mustache_rating" />

            <ImageView
                android:id="@+id/attribute_image01"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_mustache_rating" />

            <ImageView
                android:id="@+id/attribute_image00"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_mustache_rating" />

            <ImageView
                android:id="@+id/attribute_image14"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_row="1"
                android:layout_column="0"
                android:src="@drawable/pricing_icon_03"
                />

            <ImageView
                android:id="@+id/attribute_image13"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_row="1"
                android:layout_column="1"
                android:src="@drawable/pricing_icon_03"
                />

            <ImageView
                android:id="@+id/attribute_image12"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_row="1"
                android:layout_column="2"
                android:src="@drawable/pricing_icon_03"
                />

            <ImageView
                android:id="@+id/attribute_image11"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_row="1"
                android:layout_column="3"
                android:src="@drawable/pricing_icon_03"
                />

            <ImageView
                android:id="@+id/attribute_image10"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_row="1"
                android:layout_column="4"
                android:src="@drawable/pricing_icon_03"
                />

        </GridLayout>

    </RelativeLayout>


</LinearLayout>